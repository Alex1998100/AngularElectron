/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/angular-main.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/app/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [ // Exclude electron main file and environment files specific to electron if any
    "src/electron-main.ts",
    "src/environments/*.electron.ts",
    "src/**/*.spec.ts" // Exclude tests (tests are configured separately as in my previous responses)
   ]
}
